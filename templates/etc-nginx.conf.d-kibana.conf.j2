server {
  listen {{ https_port }};
  server_name {{ ansible_fqdn }};

  include /etc/nginx/conf.d/ssl.inc;

  location / {
    root  {{ kibana_root }};
    index  index.html  index.htm;
  }

  location ~ ^/([^*]*)logstash-(?<date>d+.d+.d+)(,?[^*/]+)*/_search$ {
    set $part1 $1;
    set $part3 $3;
    rewrite ^.*$ /${part1}logstash-${date}${part3}/_search last;
  }

  location ~ ^/_(aliases|nodes|search|mapping)$ {
    proxy_pass http://127.0.0.1:{{ es_http_port }};
    proxy_read_timeout 90;
  }

  location ~ ^/.*/_(aliases|search|mapping)$ {
    proxy_pass http://127.0.0.1:{{ es_http_port }};
    proxy_read_timeout 90;
  }


  # Password protected end points
  location ~ ^/kibana-int/dashboard/.*$ {
    proxy_pass http://127.0.0.1:{{ es_http_port }};
    proxy_read_timeout 90;
    limit_except GET {
      proxy_pass http://127.0.0.1:{{ es_http_port }};
      # auth_basic "Restricted";
      # auth_basic_user_file /etc/nginx/conf.d/kibana.myhost.org.htpasswd;
    }
  }
  location ~ ^/kibana-int/temp.*$ {
    proxy_pass http://127.0.0.1:{{ es_http_port }};
    proxy_read_timeout 90;
    limit_except GET {
      proxy_pass http://127.0.0.1:{{ es_http_port }};
      # auth_basic "Restricted";
      # auth_basic_user_file /etc/nginx/conf.d/kibana.myhost.org.htpasswd;
    }
  }
}